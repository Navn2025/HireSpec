# Python Authentication Service Environment Variables

# =============================================
# SERVER CONFIGURATION
# =============================================
PORT=5000
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production

# =============================================
# DATABASE CONFIGURATION
# =============================================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=interview_platform_unified

# =============================================
# FACE RECOGNITION (Pinecone + FaceNet)
# =============================================
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_INDEX=face-auth-index
PINECONE_HOST=your_pinecone_host_here
PINECONE_ENV=us-west1-gcp
PINECONE_USE_POD=true
PINECONE_POD_TYPE=p1.x1

# Face Recognition Parameters
FACE_MIN_SCORE=0.35
FACE_RATIO_THRESHOLD=0.18
FACE_ADAPTIVE_LR=0.05
FACE_DEVICE=cpu

# =============================================
# EMAIL CONFIGURATION (OTP)
# =============================================
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password_here
MAIL_DEFAULT_SENDER=noreply@interview-platform.com

# =============================================
# JWT CONFIGURATION
# =============================================
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS=24

# =============================================
# CORS & ORIGINS
# =============================================
FRONTEND_ORIGIN=http://localhost:5173
NODE_SERVICE_URL=http://localhost:5001
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5001

# =============================================
# SESSION & COOKIES
# =============================================
COOKIE_SECURE=false
COOKIE_SAMESITE=Lax

# =============================================
# SERVICE INTEGRATION
# =============================================
AUTH_SERVICE_SECRET=shared-secret-change-in-production

# =============================================
# OPTIONAL: Production Settings
# =============================================
# RENDER=true
# DATABASE_PATH=/path/to/users.db
